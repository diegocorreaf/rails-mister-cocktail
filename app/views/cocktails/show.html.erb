<h1> <%= @cocktail.name %></h1>

<p>
  <% @cocktail.doses.each do |dose| %>
  Dose: <%= dose.description %> | <%= dose.ingredient.name %>
  <%= link_to "Delete", dose_path(dose), 
    method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</p>

<%= link_to 'Cocktail\'s list', cocktails_path, class: 'btn btn-primary' %>
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
